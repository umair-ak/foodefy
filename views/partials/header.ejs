<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- icone -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,-25" />
    <!-- css file -->
    <link rel="stylesheet" href="/css/styles.css">
    
    <title>Foodefy</title>
</head>
<body>
    
    
    <!-- header -->
    
    <header>
        <a href="#" class="logo"><i class="fas fa-utensils"></i>Foodefy</a>
        
        <div id="menu-bar" class="fas fa-bars"> </div>
        
        <nav class="navbar">
            <a href="/">home</a>
            <a href="#popular">popular</a>
            <a href="/menu">Menu</a>
            <a href="#">
                <i class="material-symbols-outlined" id="cart-btn">
                    shopping_cart
                </i>
            </a>
            <a href="/home">
                <i class="material-symbols-outlined" id="acc-btn">
                    account_circle
                </i>
            </a>
        </nav>

        <div class="cart-items-container" id="cartitems">
            <%if(bool){%>
                <%if(items.length==0){%>
                    <a href="/menu" class="btn">Add Items</a>
                <%}else{%>
            <%items.forEach((item)=>{%>
            <div class="cart-item">
                <form action="/cart/<%=item['name']%>" method="post">
                    <button type="submit">
                        <span class="fas fa-times"></span>
                    </button>
                </form>
                <img src="images/<%=item['img']%>" alt="">
                <div class="content">
                    <h3><%=item['name']%></h3>
                    <div class="price">
                        <%=item['price']%>
                    </div>
                </div>
            </div>
            <%})%>
            <form action="/ordcnfrm" method="post">
                <button  class="btn">Checkout</button>
            </form>
            <%}%>
            <%}else{%>
                <a href="/login" class="btn">Login</a>
            <%}%>

        </div>

    </header>